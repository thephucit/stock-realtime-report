{
    "name": "Fireant",
    "version": "1.0",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://www.fireant.vn; object-src 'self'",
    "description": "Giá cổ phiếu",
    "browser_action": {
       "default_icon": "img/favicon.png",
       "default_title": "Fireant",
       "default_popup":"html/popup.html"
    },
    "icons": {
        "48": "img/favicon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "img/favicon.png"
    ]
}